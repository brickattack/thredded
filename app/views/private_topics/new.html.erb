<% content_for :page_id do %>topics_new<% end %>
<% content_for :page_title do %>
  <%= site.title %> | <%= messageboard.title %> | start a new private topic
<% end %>

<header>
  <nav>
    <ul class="breadcrumbs">
      <li><a href="/">Forums</a></li>
      <li><%= link_to messageboard.title,
        messageboard_topics_path(messageboard) %></li>
      <li><span>New Private Topic</span></li>
    </ul>
  </nav>
</header>

<div class="forms">
  <%= nested_form_for([messageboard, @private_topic],
    url: create_messageboard_private_topic_url(messageboard, @private_topic,
    host: site.cached_domain),
    html: { multipart: true, class: :topic_form }) do |f| %>

    <ul>
      <%= render partial: 'form', locals: {
        f: f,
        messageboard: MessageboardDecorator.new(messageboard),
      } %>

      <li class="submit">
        <%= f.submit "Create New Private Topic", { tabindex: 3 } %>
      </li>
    </ul>
  <% end %>
</div>
